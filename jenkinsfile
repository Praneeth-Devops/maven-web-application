pipeline {
    agent any
    tools {
        maven 'maven3.6.1'
   }

    stages{
        stage('checkout'){
            steps{
               git credentialsId: 'praneegit', url: 'https://github.com/Praneeth-Devops/maven-web-application.git'
            }
        }
        stage('build'){
            steps{
               sh "mvn clean package"
            }
        stage('DeployAppIntoTomcat') {
           steps{
             sshagent(['tomcat-deploy']) {
                   sh " scp -o hostkeychecking=no target/*.war ec2-user@172.31.33.8:/opt/tomcat8/webapps/"
             }
              }
            }
        }
    }
}
